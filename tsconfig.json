{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "dom",
            "es2017"
        ],
        "typeRoots": [
            "node_modules/"
        ],
        "outDir": "dist/",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "game/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}